<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <NoWarn>1701;1702;CS1591;CS1573,CA2254;RCS1079;CS8618;IDE0022</NoWarn>
        <Description>A light-weight REST Api framework for ASP.Net 8 and newer that implements REPR (Request-Endpoint-Response) Pattern.</Description>
        <PackageIcon>icon.png</PackageIcon>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageTags>http, rest, rest-api, web-api, webapi, aspnet, aspnetcore, dotnet6, minimal-api, vertical-slice-architecture, repr-pattern</PackageTags>
        <OutputType>Library</OutputType>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>

    <!-- Exclude files that are already defined in referenced projects (Core, Messaging, JobQueues) -->
    <ItemGroup>
        <Compile Remove="ServiceResolver\**\*.cs" />
        <!-- Exclude duplicate Messaging files that exist in FastEndpoints.Messaging project -->
        <Compile Remove="Messaging\Commands\CommandExtensions.cs" />
        <Compile Remove="Messaging\Commands\CommandHandlerDefinition.cs" />
        <Compile Remove="Messaging\Commands\CommandHandlerExecutor.cs" />
        <Compile Remove="Messaging\Commands\CommandMiddlewareConfig.cs" />
        <Compile Remove="Messaging\Commands\ICommandMiddleware.cs" />
        <!-- Exclude duplicate Events files -->
        <Compile Remove="Messaging\Events\**\*.cs" />
        <!-- Exclude duplicate Jobs files that exist in FastEndpoints.JobQueues project -->
        <Compile Remove="Messaging\Jobs\**\*.cs" />
    </ItemGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App"/>

        <ProjectReference Include="..\Attributes\FastEndpoints.Attributes.csproj"/>
        <ProjectReference Include="..\JobQueues\FastEndpoints.JobQueues.csproj"/>
        <ProjectReference Include="..\Messaging\Messaging\FastEndpoints.Messaging.csproj"/>

        <PackageReference Include="FluentValidation"/>
        <PackageReference Include="Microsoft.SourceLink.GitHub" PrivateAssets="All"/>
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\README.md" Pack="true" PackagePath="\" Visible="false"/>
        <None Include="..\icon.png" Pack="true" PackagePath="\" Visible="false"/>
        <None Include="changelog.md" Pack="false" Visible="false"/>
    </ItemGroup>

    <!-- <ItemGroup> -->
    <!--     <ProjectReference Include="..\Generator\FastEndpoints.Generator.csproj" Pack="false" ReferenceOutputAssembly="false" OutputItemType="Content" CopyToOutputDirectory="PreserveNewest"/> -->
    <!--     <None Include="$(OutputPath)\net7.0\$(AssemblyName).Generator.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false"/> -->
    <!-- </ItemGroup> -->

</Project>