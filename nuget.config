<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- Ensure only a single source is used -->
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
  </packageSources>
  <packageSourceMapping>
    <!-- Map all packages to nuget.org to satisfy NU1507 -->
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
</configuration>
